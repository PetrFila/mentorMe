
<%= form_with(model: profile, local: true) do |form| %>


<% if profile.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

    <ul>
    <% profile.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<div class="row">
  <div class=col-lg-3></div>
    <div class="col-lg-6">

      <form>

        <div class="form-row">

          <div class="form-group col-md-12">

            <% if profile.image.present?%>
              <%= image_tag profile.image_url, class: "avatar mx-auto d-block"%>
            <% end %>

            <%= form.label :avatar %><br>
            <%#= form.hidden_field :image, value: @photo.cached_image_data %>
            <%= form.file_field :image %>

          </div>


          <div class="form-group col-md-6">
            <%= form.label :first_name %>
            <%= form.text_field :first_name, type: "text", class: "form-control", placeholder: "First name" %>
          </div>

          <div class="form-group col-md-6">
            <%= form.label :last_name %>
            <%= form.text_field :last_name, type: "text", class: "form-control", placeholder: "Last name" %>
          </div>

          <div class="form-group col-lg-12 col-md-12 col-sm-12">

            <div class="row form_row">
              <label class="col-12" for="skill[]">Skills</label><br>
                <% @skills.each do |skill| %>
              <p class="sport_played col-6"><%= check_box_tag 'profile[skill][]', skill.name -%>
              <%= skill.name -%></p>
              <% end %>
              <br>
            </div>

          </div>

          <div class="form-group col-lg-12 col-md-12 col-sm-12">
            <%= form.label :about %>
            <%= form.text_area :about, type: "text", class: "form-control", placeholder: "About"%>
          </div>

          <%= form.submit 'Submit', type: "submit", class: "btn btn-primary" %>

          <% end %>
        </div>
      </form>
    </div>
  <div class=col-lg-3></div>
</div>
