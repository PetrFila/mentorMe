<%= render "profiles/navbar"%>

<h2 class="text-center">Profiles</h2>


<% @profiles.each do |profile| %>

  <div class="row">
    <div class=col-lg-3></div>
      <div class="card border-light col-lg-6">


        <% if profile.image.present?%>
          <%= image_tag profile.image_url, class: "avatar mx-auto d-block"%>
        <% end %>
        <h3 class="card-header text-center"><%= profile.first_name %> <%= profile.last_name %></h3>
        <div class="card-body">
          <p class="card-text">
            <%# JSON.parse(profile.skill).each do |skill| %>
              <h1 class="badge badge-<%#= Skill::SKILLS[skill.downcase] %>"><%#= current_user.profile.skill %></h1>
              <p class=“profile_bio”><%= profile.skill %></p>
            <%# end %>
          </p>
          <p class= "card-title"><%= profile.about %></p>
        </div>
      </div>
    <div class=col-lg-3></div>
  </div>


  <div class="row">
    <div class=col-lg-3></div>
      <div class="col-lg-6">
        <%= link_to 'Show', profile, class: "btn btn-outline-info" %>
        <%= link_to 'Edit Profile', edit_profile_path(profile), class: "btn btn-outline-info" %>
        <%= link_to 'Delete', profile, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-info" %>
      </div>
    <div class=col-lg-3></div>
  </div>
<% end %>


<% if !current_user.profile.present? %>
  <%= link_to 'New Profile', new_profile_path(current_user.profile) %>
<% end %>
