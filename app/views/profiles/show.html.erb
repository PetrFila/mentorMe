<%= render "profiles/navbar"%>


<p id="notice"><%= notice %></p>

<h2 class="text-center">Profile details</h2>

<div class="row">
  <div class="col-12 col-sm-1 col-md-1 col-lg-3"></div>
    <div class="card border-light col-12 col-sm-10 col-md-10 col-lg-6">
      <% if @profile.image.present?%>
        <%= image_tag @profile.image_url, class: "avatar mx-auto d-block"%>
      <% end %>
      <h3 class="card-header text-center"><%= full_name %></h3>
      <div class="card-body">
        <h4 class= "card-title"><%= @profile.title %></h4>
        <p class="card-text"><%= @profile.about %></p>
        <p class="card-text">
          <%# JSON.parse(@profile.skill).each do |skill| %>
            <h1 class="badge badge-<%#= Skill::SKILLS[skill.downcase] %>"><%#= current_user.profile.skill %></h1>
            <p class=“profile_bio”><%= @profile.skill %></p>
          <%# end %>
        </p>
      </div>
    </div>
  <div class="col-12 col-sm-1 col-md-1 col-lg-3"></div>
</div>






<div class="row">
  <div class="col-12 col-sm-1 col-md-1 col-lg-3"></div>
    <div class="col-12 col-sm-10 col-md-10 col-lg-6">
      <%= link_to 'Edit', edit_profile_path(@profile), class: "btn btn-outline-info" %>
      <%= link_to 'Back', profiles_path, class: "btn btn-outline-info" %>
      <%= link_to "Open Chat", profile_chats_path(params[:id]), class: "btn btn-outline-info" %>
    </div>
  <div class="col-12 col-sm-1 col-md-1 col-lg-3"></div>
</div>
